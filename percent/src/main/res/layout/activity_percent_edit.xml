<?xml version="1.0" encoding="utf-8"?>

<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color"
        android:fitsSystemWindows="true"
        tools:context="com.runto.percent.activites.PercentEditActivity">

        <RelativeLayout
            android:id="@+id/percent_edit_title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color">

            <ImageView
                android:id="@+id/edit_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/black_back_image" />

            <TextView
                android:id="@+id/percent_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="编辑资料"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize17" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="1dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/percent_edit_title_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize16" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <org.raphets.roundimageview.RoundImageView
                    android:id="@+id/edit_avatar_image"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_mine_small_avatar"
                    app:type="circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/edit_avatar_image"
                    android:src="@drawable/icon_mine_open" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/edit_nick_name_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="1dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/edit_avatar_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize16" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/edit_nice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/home_text_color_1"
                    android:textSize="@dimen/textSize16"
                    android:text="七里香"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/edit_nice_text"
                    android:src="@drawable/icon_mine_open" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_name_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="1dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/edit_nick_name_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize16"
                android:text="姓名"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/edit_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/home_text_color_1"
                    android:textSize="@dimen/textSize16"
                    android:text="张三"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/edit_name_text"
                    android:src="@drawable/icon_mine_open" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_gender_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="1dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/edit_name_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize16"
                android:text="性别"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/edit_gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/home_text_color_1"
                    android:textSize="@dimen/textSize16"
                    android:text="女"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/edit_gender_text"
                    android:src="@drawable/icon_mine_open" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_birthday_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/home_address_text_color"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_gender_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize16"
                android:text="生日"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/edit_birthday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/home_text_color_1"
                    android:textSize="@dimen/textSize16"
                    android:text="1991-10-21"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/edit_birthday_text"
                    android:src="@drawable/icon_mine_open" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>