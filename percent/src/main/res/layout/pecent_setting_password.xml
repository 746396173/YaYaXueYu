<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_address_text_color">

        <RelativeLayout
            android:id="@+id/password_title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/password_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/black_back_image" />

            <TextView
                android:id="@+id/password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置密码"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize17" />
        </RelativeLayout>

        <View
            android:id="@+id/percent_help_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            app:layout_constraintTop_toBottomOf="@+id/password_title_layout"/>

        <EditText
            android:id="@+id/password_phone_num"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/textSize17"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:text="17886714232"
            app:layout_constraintTop_toBottomOf="@+id/password_title_layout"/>

        <View
            android:id="@+id/password_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/password_phone_num"/>

        <RelativeLayout
            android:id="@+id/password_code_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/password_line_1">

            <EditText
                android:id="@+id/password_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize17"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_centerVertical="true"
                android:hint="输入验证码"
                android:textColorHint="@color/home_text_color_1"
                android:layout_toStartOf="@+id/password_get_code"/>

            <TextView
                android:id="@+id/password_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/textSize14"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="@color/selector_color"/>

        </RelativeLayout>

        <View
            android:id="@+id/password_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/password_code_layout"/>

        <TextView
            android:id="@+id/password_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="@dimen/textSize17"
            android:textColor="@color/home_address_text_color"
            android:textStyle="bold"
            android:gravity="center"
            android:text="下一步"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/drawable_password_edit_back"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/password_line_2"/>

    </android.support.constraint.ConstraintLayout>
</layout>