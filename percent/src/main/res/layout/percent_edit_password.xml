<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_address_text_color">

        <RelativeLayout
            android:id="@+id/password_title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <ImageView
                android:id="@+id/password_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/black_back_image" />

            <TextView
                android:id="@+id/password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置密码"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize17" />
        </RelativeLayout>

        <View
            android:id="@+id/percent_password_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            app:layout_constraintTop_toBottomOf="@+id/password_title_layout"/>

        <EditText
            android:id="@+id/password_phone_num"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/drawable_edit_back_1"
            android:hint="输入要设置的密码"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/home_text_color"
            android:textColorHint="@color/home_text_color_1"
            android:textSize="@dimen/textSize17"
            app:layout_constraintTop_toBottomOf="@+id/percent_password_line" />


        <EditText
            android:id="@+id/password_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/drawable_edit_back_1"
            android:hint="确认您的密码"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/home_text_color_1"
            android:textSize="@dimen/textSize17"
            app:layout_constraintTop_toBottomOf="@+id/password_phone_num" />


        <TextView
            android:id="@+id/password_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/drawable_password_limit_back"
            android:gravity="center"
            android:text="提交"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/home_address_text_color"
            android:textSize="@dimen/textSize17"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/password_code" />

    </android.support.constraint.ConstraintLayout>
</layout>