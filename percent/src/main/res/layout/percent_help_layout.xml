<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_address_text_color">

        <RelativeLayout
            android:id="@+id/help_title_layout"
            android:layout_width="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/help_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/black_back_image" />

            <TextView
                android:id="@+id/help_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="帮助与反馈"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize17" />

            <TextView
                android:id="@+id/help_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/help_title"
                android:layout_alignParentEnd="true"
                android:text="帮助"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize15" />
        </RelativeLayout>

        <View
            android:id="@+id/percent_help_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            app:layout_constraintTop_toBottomOf="@+id/help_title_layout"/>

        <EditText
            android:id="@+id/help_notice"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/drawable_edit_back"
            android:textSize="@dimen/textSize17"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="8dp"
            android:hint="请输入反馈内容"
            android:textColorHint="@color/home_text_color_1"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@+id/help_title_layout"/>

        <RelativeLayout
            android:id="@+id/help_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/help_notice">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="您的手机号码"/>

            <TextView
                android:id="@+id/help_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_text_color_2"
                android:textSize="@dimen/textSize17"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="17862288668"/>

        </RelativeLayout>

        <View
            android:id="@+id/percent_help_line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/help_phone_layout"/>

        <TextView
            android:id="@+id/help_limit_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="@dimen/textSize17"
            android:textColor="@color/home_address_text_color"
            android:gravity="center"
            android:text="提交反馈"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/drawable_help_limit_back"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/percent_help_line6"/>


    </android.support.constraint.ConstraintLayout>
</layout>