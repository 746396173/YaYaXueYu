<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color">

        <RelativeLayout
            android:id="@+id/set_title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color">

            <ImageView
                android:id="@+id/set_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/black_back_image" />

            <TextView
                android:id="@+id/set_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize17" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/set_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:paddingStart="19dp"
            android:paddingEnd="17dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/set_title_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="设置密码"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_mine_open"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/set_limit_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="@dimen/textSize17"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/home_bottom_text_selector"
            android:gravity="center"
            android:text="退出登录"
            android:background="@drawable/drawable_set_limit_back"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/set_password"/>

    </android.support.constraint.ConstraintLayout>
</layout>