<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color">

        <RelativeLayout
            android:id="@+id/about_title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:background="@color/home_address_text_color">

            <ImageView
                android:id="@+id/about_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/black_back_image" />

            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="关于"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/textSize17" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/percent_about_layout"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/about_title_layout">
        
        <RelativeLayout
            android:id="@+id/about_version"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="当前版本"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="1.0"/>
        </RelativeLayout>

        <View
            android:id="@+id/percent_about_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/about_version"/>

        <RelativeLayout
            android:id="@+id/about_version_explain"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/percent_about_line1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="版本说明"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_mine_open"/>
        </RelativeLayout>

        <View
            android:id="@+id/percent_about_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/about_version_explain"/>

        <RelativeLayout
            android:id="@+id/about_url"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/percent_about_line2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="官方网址"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color_2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="www.yayaxueyu.com"/>
        </RelativeLayout>

        <View
            android:id="@+id/percent_about_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/about_url"/>

        <RelativeLayout
            android:id="@+id/about_weixin"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/percent_about_line3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="官方微信"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color_2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="1135865888"/>
        </RelativeLayout>

        <View
            android:id="@+id/percent_about_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/about_weixin"/>

        <RelativeLayout
            android:id="@+id/about_business"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/percent_about_line4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="商务合作"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color_2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="1135865888"/>
        </RelativeLayout>

        <View
            android:id="@+id/percent_about_line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/about_business"/>

        <RelativeLayout
            android:id="@+id/about_help"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/home_address_text_color"
            app:layout_constraintTop_toBottomOf="@+id/percent_about_line5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_centerVertical="true"
                android:text="帮助与反馈"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize17"
                android:textColor="@color/home_text_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_mine_open"/>
        </RelativeLayout>

        <View
            android:id="@+id/percent_about_line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/about_help"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/about_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/percent_about_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/home_text_color_1"
                android:text="Copyright 2019润图信息版权所有"/>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>